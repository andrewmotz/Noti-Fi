<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#363739</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">#202124</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="buttonStyle">@style/ButtonStyles</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="ButtonStyles" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">#9e9e9e</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8ab4ec</item>
        <item name="android:padding">20dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
<!--Styles that can be set globally, but don't work with our buttons. Styles will be set for each.
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
-->
</resources>
